byte_bit()
{
   local value=${1:-0}
   local bit=${2-0}
   local bitMask=$(( 1 << bit ))
   printf '%s' $(( value & bitMask ? 1 : 0 ))
}

byte_isBitSet()
{
   return $(( 1 - $(byte_bit "$@") ))
}

byte_printBinary()
{
	local binaryValue
	local bit=7
	while [ $bit -ge 0 ]
	do
		binaryValue=${binaryValue}$(byte_bit $1 $bit)
		bit=$((bit-1))
	done
	printf '%s' $binaryValue
}

byte_setBit()
{
	local binaryValue=$1
	local bit=$2
	
	printf '%s' $(( 1 << bit | binaryValue ))
}
